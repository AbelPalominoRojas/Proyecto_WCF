@model WebEventos.SRefUsuario.Usuario

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-12 col-lg-10 col-xl-8">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Listado de Tipo de Usuario</div>
            </div>
            <div class="ibox-body">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">
                        Codigo
                    </label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.CodUsuario)
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">
                        Nombres
                    </label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.Nombres)
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">
                        Apellidos
                    </label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.Apellidos)
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">
                        Tipo Email
                    </label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.Email)
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    @Html.ActionLink(" ", "Index", null, new { @class = "btn btn-info fa fa-reply" })
                    @Html.ActionLink(" Editar", "Edit", new { id = Model.CodUsuario }, new { @class = "btn btn-info fa fa-pencil" })

                </div>

            </div>
        </div>
    </div>
</div>
