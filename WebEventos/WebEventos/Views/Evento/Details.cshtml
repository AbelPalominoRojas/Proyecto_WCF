@model WebEventos.SRefEvento.Evento

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-12">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">
                    Detalle de Evento
                </div>
            </div>
            <div class="ibox-body">

                <div class="form-row">

                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Codigo</label>
                            <div class="col-sm-8">
                                : @Html.DisplayFor(model => model.CodEvento)
                            </div>
                        </div>
                    </div>


                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Nombre Evento</label>
                            <div class="col-sm-8">
                                : @Html.DisplayFor(model => model.NombreEvento)
                            </div>
                        </div>
                    </div>


                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Descripcion Evento</label>
                            <div class="col-sm-8">
                                : @Html.DisplayFor(model => model.DescripcionEvento)
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Area Tematica</label>
                            <div class="col-sm-8">
                                : @Html.DisplayFor(model => model.AreaTematica.NombreAreaTematica)
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Fecha</label>
                            <div class="col-sm-8">
                                : @Convert.ToDateTime(Model.FechaEvento).ToString("dd-MM-yyyy")
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Hora</label>
                            <div class="col-sm-8">
                                : @Convert.ToDateTime(Model.FechaEvento).ToString("hh:mm tt")
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Expositor</label>
                            <div class="col-sm-8">
                                : @Html.DisplayFor(model => model.Expositor)
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Limite de Participantes</label>
                            <div class="col-sm-8">
                                : @Html.DisplayFor(model => model.LimiteParticipantes)
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Lugares Disponibles</label>
                            <div class="col-sm-8">
                                : @Html.DisplayFor(model => model.LugaresDisponibles)
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Lugar del Evento</label>
                            <div class="col-sm-8">
                                : @Html.DisplayFor(model => model.LugarEvento)
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="form-group row mb-0">
                            <label class="col-sm-4 mb-0 font-bold ">Estado</label>
                            <div class="col-sm-8">
                                : @Html.Action("getEstado", new { estado = Model.Estado })
                            </div>
                        </div>
                    </div>

                </div>

                        <hr />
                        <div class="d-flex justify-content-between">
                            @Html.ActionLink(" ", "Index", null, new { @class = "btn btn-info fa fa-reply" })
                            @Html.ActionLink(" Editar", "Edit", new { id = Model.CodEvento }, new { @class = "btn btn-primary fa fa-pencil" })
                        </div>

                    </div>
                </div>
    </div>
</div>
