@model WebEventos.SRefEvento.Evento

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-12">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">
                    Detalle de Evento
                </div>
            </div>
            <div class="ibox-body">

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Código</label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.CodEvento)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Evento</label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.NombreEvento)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Descripcion</label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.DescripcionEvento)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Area Tematica</label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.AreaTematica.NombreAreaTematica)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Fecha</label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.FechaEvento)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Expositor</label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.Expositor)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Limite de Participantes</label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.LimiteParticipantes)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Cant. Lugares Distponibles</label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.LugaresDisponibles)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Ligar del Evento</label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.LugarEvento)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Estado</label>
                    <div class="col-sm-10">
                        : @Html.DisplayFor(model => model.Estado)
                    </div>
                </div>

                <hr />
                <div class="d-flex justify-content-between">
                    @Html.ActionLink(" ", "Index", null, new { @class = "btn btn-info fa fa-reply" })
                    @Html.ActionLink(" Editar", "Edit", new { id = Model.CodEvento }, new { @class = "btn btn-primary fa fa-pencil" })
                </div>

            </div>
        </div>
    </div>
</div>
