@model WebEventos.SRefEvento.Evento

@{
    ViewBag.Title = "Create";
}

@section styles{

    @Styles.Render("~/assets/template/date/css")
}

<div class="row">
    <div class="col-12">
        <div class="ibox mb-2">
            <div class="ibox-head">
                <div class="ibox-title">Buscar Eventos</div>
                <div class="ibox-tools">
                    <button class="btn btn-sm btn-primary" id="btnBuscarEventos">
                        <i class="fa fa-search" aria-hidden="true"></i>
                        Buscar
                    </button>
                    <button class="btn btn-sm btn-primary" id="btnLimpiarEventos">
                        <i class="fa fa-eraser" aria-hidden="true"></i>
                        Limpiar
                    </button>
                    <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                </div>
            </div>
            <div class="ibox-body">
                <div class="form-row">
                    <div class="form-group form-group-date col-sm-6 col-xl-4">
                        <label>Fecha Desde</label>
                        <div class="input-group date">
                            <input type="text" class="form-control" readonly id="dtpFechaDesde" />
                            <span class="input-group-addon bg-white"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                    <div class="form-group form-group-date col-sm-6 col-xl-4">
                        <label>Fecha Hasta</label>
                        <div class="input-group date">
                            <input type="text" class="form-control" readonly id="dtpFechaHasta" />
                            <span class="input-group-addon bg-white"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>

                    <div class="form-group col-sm-6 col-xl-4">
                        <label>Area Tematica </label>
                        <select class="form-control" id="ddlAreaTematica" name="CodAreaTematica">
                        </select>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table" id="tblEventos">
                        <tr>
                            <th></th>
                            <th>
                                Cod
                            </th>
                            <th class="tbl-cell-md">
                                Fecha y Hora
                            </th>
                            <th>
                                Evento
                            </th>
                            <th>
                                Tematica
                            </th>
                            <th class="tbl-cell-lg">
                                Descripcion
                            </th>
                            <th>
                                Expositor
                            </th>
                            <th>
                                Limete
                            </th>
                            <th>
                                Disponible
                            </th>
                            <th class="tbl-cell-lg">
                                Lugar Evento
                            </th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <div class="col-12">
        <div class="ibox mb-2">
            <div class="ibox-head">
                <div class="ibox-title">Buscar Participante</div>
                <div class="ibox-tools">
                    <button class="btn btn-sm btn-primary" id="btnBuscarParticipante">
                        <i class="fa fa-search" aria-hidden="true"></i>
                        Buscar
                    </button>
                    <button class="btn btn-sm btn-primary" id="btnLimpiarParticipante">
                        <i class="fa fa-eraser" aria-hidden="true"></i>
                        Limpiar
                    </button>
                    <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                </div>
            </div>
            <div class="ibox-body">
                <div class="form-row">
                    <div class="form-group col-sm-6 col-xl-4">
                        <label>Dni</label>
                        <input class="form-control" />
                    </div>
                    <div class="form-group col-sm-6 col-xl-4">
                        <label>Nombres</label>
                        <input class="form-control" />
                    </div>
                    <div class="form-group col-sm-6 col-xl-4">
                        <label>Apellidos</label>
                        <input class="form-control" />
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table" id="tblParticipantes">
                        <tr>
                            <th></th>
                            <th>
                                Cod
                            </th>
                            <th>
                                Nombres
                            </th>
                            <th>
                                Apellidos
                            </th>
                            <th>
                                Dni
                            </th>
                            <th>
                                Tipo
                            </th>
                            <th>
                                Correo
                            </th>
                            <th class="tbl-cell-lg">
                                Direccion
                            </th>
                            <th>
                                Distrito
                            </th>
                            <th>
                                Telefono
                            </th>

                        </tr>
                    </table>

                </div>
            </div>
        </div>
    </div>

    <div class="col-12 mb-2">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Registrar Participantes a un Evento</div>
                <div class="ibox-tools">
                    <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                </div>
            </div>
            <div class="ibox-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-row">
                        <div class="form-group col-sm-6 col-xl-4">
                            <label>Participante <span class="text-danger">*</span></label>
                            <span class="form-control"></span>
                        </div>
                        <div class="form-group col-sm-6 col-xl-4">
                            <label>Dni <span class="text-danger">*</span></label>
                            <span class="form-control"></span>
                        </div>
                    </div>

                    <hr />
                    <div class="d-flex justify-content-between">
                        @Html.ActionLink(" ", "Index", null, new { @class = "btn btn-info fa fa-reply" })
                        <button type="button" class="btn btn-success">
                            <i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar
                        </button>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/assets/template/date/js")

    <script>
        $(document).ready(function () {
            let el_btnBuscarEvento = $('#btnBuscarEventos'),
                el_btnLimpiarEventos = $('#btnLimpiarEventos'),
                el_tblEventos = $('#tblEventos'),
                el_ddlAreaTematica = $('#ddlAreaTematica'),
                el_dtpFechaDesde = $('#dtpFechaDesde'),
                el_dtpFechaHasta = $('#dtpFechaHasta'),
                el_btnBuscarParticipante = $('#btnBuscarParticipante'),
                el_btnLimpiarParticipante = $('#btnLimpiarParticipante'),
                el_tblParticipantes = $('#tblParticipantes');


            $.ajax({
                data: {},
                type: "GET",
                dataType: "json",
                url: "@Url.Action("lista", "AreaTematica")",
            })
             .done(function (data, textStatus, jqXHR) {
                 let itemsAreas = ``;

                 itemsAreas += `<option value="0">Seleccione</option>`;
                 $.each(data, function (index, value) {
                     itemsAreas += `<option value="${value.CodAreaTematica}">${value.NombreAreaTematica}</option>`;
                 });
                 el_ddlAreaTematica.html(itemsAreas);
                 //console.log(data);
             })
             .fail(function (jqXHR, textStatus, errorThrown) {
                 console.log("La solicitud a fallado: " + textStatus);
             });



            el_btnBuscarEvento.on('click', function () {
                let dataSearch = {},
                    rows = '';

                dataSearch.CodAreaTematica = el_ddlAreaTematica.val();

                if (el_dtpFechaDesde.val() != '') dataSearch.fechaDesde = el_dtpFechaDesde.val();

                if (el_dtpFechaHasta.val() != '') dataSearch.fechaHasta = el_dtpFechaHasta.val();

                $.ajax({
                    data: dataSearch,
                    type: "POST",
                    dataType: "json",
                    url: "@Url.Action("searhList","Evento")",
                })
             .done(function (data, textStatus, jqXHR) {

                 $.each(data, function (index, value) {

                     rows += `<tr>
                                <td>${value.CodEvento}</td>
                                <td>${value.FechaEventoString}</td>
                                <td>${value.NombreEvento}</td>
                                <td>${value.AreaTematica.NombreAreaTematica}</td>
                                <td>${value.DescripcionEvento}</td>
                                <td>${value.Expositor}</td>
                                <td>${value.LimiteParticipantes}</td>
                                <td>${value.LugaresDisponibles}</td>
                                <td>${value.LugarEvento}</td>
                            </tr>`;
                 });
                 //console.log(data);

                 el_tblEventos.find('>tbody').html(rows);
             })
             .fail(function (jqXHR, textStatus, errorThrown) {
                 console.log("La solicitud a fallado: " + textStatus);
             });
            });

            el_btnLimpiarEventos.on('click', function () {

                el_dtpFechaDesde.val('');
                el_dtpFechaHasta.val('');
                el_ddlAreaTematica.val('0');
                el_tblEventos.find('>tbody').html('');
            });

        });
    </script>
}
