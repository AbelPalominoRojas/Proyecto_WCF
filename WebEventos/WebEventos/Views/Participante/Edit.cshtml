@model WebEventos.SRefParticipante.Participante

@{
    ViewBag.Title = "Edit";
}

@section styles{

    @Styles.Render("~/assets/template/date/css")
}
<div class="row">
    <idv class="col-12">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Actualizar Participante</div>
            </div>

            <div class="ibox-body">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @ViewBag.Message
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-row">
                        <div class="form-group col-sm-6 col-xl-4">
                            <label>Tipo Participante <span class="text-danger">*</span></label>
                            @Html.DropDownListFor(model => model.CodTipoParticipante, ViewBag.TipoParticipantes as IEnumerable<SelectListItem>, "Seleccione", htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group col-sm-6 col-xl-4">
                            <label>Dni <span class="text-danger">*</span></label>
                            @Html.EditorFor(model => model.Dni, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group col-sm-6 col-xl-4">
                            <label>Nombres <span class="text-danger">*</span></label>
                            @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group col-sm-6 col-xl-4">
                            <label>Apellidos <span class="text-danger">*</span></label>
                            @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group col-sm-6 col-xl-4">
                            <label>Correo <span class="text-danger">*</span></label>
                            @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group form-group-date col-sm-6 col-xl-4">
                            <label>Fecha Nacimiento</label>
                            <div class="input-group date">
                                @Html.TextBoxFor(model => model.FechaNac, "{0:dd-MM-yyyy}", new { @class = "form-control", @readonly = true })
                                <span class="input-group-addon bg-white"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                        <div class="form-group col-sm-6 col-xl-4">
                            <label>Direccion</label>
                            @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group col-sm-6 col-xl-4">
                            <label>Distrito</label>
                            @Html.EditorFor(model => model.Distrito, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group col-sm-6 col-xl-4">
                            <label>Teléfono</label>
                            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        @Html.ActionLink(" ", "Index", null, new { @class = "btn btn-info fa fa-reply" })
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar
                        </button>

                    </div>

                }


            </div>

        </div>
    </idv>
</div>

@section scripts{

    @Scripts.Render("~/assets/template/date/js")

}